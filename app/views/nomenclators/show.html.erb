<%- model_class = Nomenclator -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @nomenclator.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @nomenclator.description %></dd>
</dl>


<%= content_for :sidebar do %>
    <li><%= link_to t('.values'), nomenclator_items_path(@nomenclator) %></li>
    <li><%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_nomenclator_path(@nomenclator) %></li>
    <li><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  nomenclator_path(@nomenclator),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %></li>
    <li><%= link_to t('.back', :default => t("helpers.links.back")),
                nomenclators_path %></li>
<% end %>
