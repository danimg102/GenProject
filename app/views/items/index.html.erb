<%- model_class = Item -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:value) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.value %></td>
        <td><%= item.description %></td>
        <td>
          <%= link_to t('.show'), nomenclator_item_path(item.nomenclator_id, item.id),
                      :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_nomenclator_item_path(item.nomenclator_id, item.id),
                      :class => 'btn btn-xs btn-warning' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      nomenclator_item_path(item.nomenclator_id, item.id),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= paginate @items %></p>


<%= content_for :sidebar do %>
    <li><%= link_to t('.new', :default => t("helpers.links.new")),
                new_nomenclator_item_path %></li>
<% end %>
