<%
   # TODO: arreglar esto que esta feo
   if @item.new_record?
     path_to_send = nomenclator_items_path(nomenclator_id:@item.nomenclator_id)
   else
     path_to_send = nomenclator_item_path(nomenclator_id:@item.nomenclator_id, id:@item.id)
   end
%>

<%= form_for @item, url: path_to_send, :html => { :class => "form-horizontal item" } do |f| %>

  <% if @item.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nomenclator_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nomenclator_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :value, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :value, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  nomenclator_items_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
