<h1><%= t('.systems') %></h1>

<% @systems.each do |system| %>
    <div class="well well-small">
      <div class="row">
        <div class="col-md-10">
          <h4><%= link_to system.name, system %></h4>
          <p><%= system.description %></p>
        </div>
        <div class="col-md-2">
          <%= link_to t('.edit'), edit_system_path(system), :class => 'btn btn-warning btn-sm' %> <br> <br>
          <%= link_to t('.destroy'), system, method: :delete, data: { confirm: 'Are you sure?' },
            :class => 'btn btn-danger btn-sm' %>
        </div>
      </div>
    </div>
<% end %>

<br>

<%= content_for :sidebar do %>
    <li><%= link_to t('.new System'), new_system_path %></li>
<% end %>
