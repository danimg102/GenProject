<%- model_class = Patient -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @patient.code %></dd>
</dl>

<dl>
  <% @patient_data.each do |p| %>
      <dt><strong><%= p.name %>:</strong></dt>
      <dd><%= p.value %></dd>
  <% end %>
</dl>


<%= link_to t('.back', :default => t("helpers.links.back")),
            system_patients_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_system_patient_path(@patient.system_id, @patient.id), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            system_patient_path(@patient.system_id, @patient.id),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
