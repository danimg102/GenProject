<%- model_class = Patient -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @patient.code %></dd>
</dl>

<dl class="dl-horizontal">
  <% @system_attributes.each do |p| %>
      <dt><strong><%= model_class.human_attribute_name(p.name) %>:</strong></dt>
      <dd>
        <% attvalue = @patient.get_value_for_attribute(p.id) %>
        <% if attvalue.nil? or attvalue == "" %>
            ----
        <% else %>
            <%= attvalue %>
        <% end %>
      </dd>
  <% end %>
</dl>


<%= content_for :sidebar do %>
    <li><%= link_to t('.back', :default => t("helpers.links.back")),
                system_patients_path %></li>
    <li><%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_system_patient_path(params[:system_id], @patient.id) %></li>
    <li><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                system_patient_path(params[:system_id], @patient.id),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %></li>
<% end %>