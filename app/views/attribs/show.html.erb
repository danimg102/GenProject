<%- model_class = Attrib -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:system_id) %>:</strong></dt>
  <dd><%= @attrib.get_attrib_system_name(@attrib.system_id) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @attrib.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= @attrib.attr_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:extra) %>:</strong></dt>
  <dd><%= @attrib.extra %></dd>
</dl>

<%= content_for :sidebar do %>
    <li><%= link_to t('.back', :default => t("helpers.links.back")),
                system_attribs_path  %></li>
    <li><%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_system_attrib_path(@attrib.system_id, @attrib.id) %></li>
    <li><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                system_attrib_path(@attrib.system_id, @attrib.id),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %></li>
<% end %>
