<%
   # TODO: arreglar esto que esta feo
   if @attrib.new_record?
     path_to_send = system_attribs_path(system_id:@attrib.system_id)
   else
     path_to_send = system_attrib_path(system_id:@attrib.system_id, id:@attrib.id)
   end
%>

<%= form_for @attrib, url: path_to_send, :html => { :class => "form-horizontal attrib" } do |f| %>

    <% if @attrib.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@attrib.errors.count, "error") %> prohibited this attrib from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @attrib.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

   <div hidden="hidden" class="form-group">
     <%= f.label :system_id, :class => 'col-sm-2 control-label' %>
     <div class="col-sm-10">
       <%= f.text_field :system_id, :class => 'form-control' %>
     </div>
   </div>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => 'form-control', placeholder: "Enter the name of the new Attribute" %>
    </div>
    <%= error_span(@attrib[:name]) %>
  </div>

  <div class="form-group">
    <%= f.label :attr_type, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :attr_type, :class => 'form-control', placeholder: "Enter the type of the new Attribute" %>
    </div>
    <%= error_span(@attrib[:attr_type]) %>
  </div>

  <div class="form-group">
    <%= f.label :extra, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :extra, :class => 'form-control', placeholder: "Enter an extra field of the new Attribute" %>
    </div>
    <%= error_span(@attrib[:extra]) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  system_attribs_path(@attrib.system_id), :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
