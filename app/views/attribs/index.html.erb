<%- model_class = Attrib -%>
<div class="page-header">
  <h1><%= params[:system_name] %> --> <%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:type) %></th>
      <th><%= model_class.human_attribute_name(:extra) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @attribs.each do |attrib| %>
      <tr>
        <td><%= attrib.name %></td>
        <td><%= attrib.attr_type %></td>
        <td>
          <% if attrib.extra.nil? or attrib.extra == '' %>
              ----
          <% else %>
              <%= attrib.extra %>
          <% end %>
        </td>
        <td>
          <%= link_to t('.show'),
                      system_attrib_path(system_id:attrib.system_id, id:attrib.id),
                      :class => 'btn btn-default btn-xs'%>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_system_attrib_path(system_id:attrib.system_id, id:attrib.id),
                      :class => 'btn btn-xs btn-warning' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      system_attrib_path(system_id:attrib.system_id, id:attrib.id),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= paginate @attribs %></p>

<%= content_for :sidebar do %>
    <li><%= link_to t('.new', :default => t("helpers.links.new")),
                new_system_attrib_path %></li>
    <li><%= link_to t('.back'), system_path(params[:system_id]) %></li>
<% end %>
